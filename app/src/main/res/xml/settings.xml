<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ListPreference
        app:key="language"
        app:title="Choose Country"
        app:entries="@array/language_entries"
        app:entryValues="@array/language_values"
        app:defaultValue="en"
        app:summary="%s"
        />
    <PreferenceCategory
        app:title="Search Settings">

    <DropDownPreference
        app:key="sortBy"
        app:title="Sort by"
        app:entries="@array/sort_entries"
        app:entryValues="@array/sort_values"
        app:defaultValue="popularity"
        app:summary="%s"
        />
</PreferenceCategory>


</PreferenceScreen>